.container {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
  height: 80vh;
  
  }
  .image{
    position: absolute;/*使用绝对定位 */
    left: 0;
    bottom: 0;
    display: block;
    width: 100%;
    height: 100%;
    z-index: -999;
  }
  .title {
    position:absolute;
	  font-size: 50rpx;
	  font-weight: bold;
  	margin-bottom: 200rpx;
  }
  
  .form {
   
	  display: flex;
	  flex-direction: column;
    align-items: center;
    border: red solid 1rpx;
    border-radius: 20rpx;
  }
  
  .input {
    margin-top: 40rpx;
    margin-right: 30rpx;
	width: 500rpx;
	height: 55rpx;
	margin-bottom: 20rpx;
	padding: 10rpx;
	border: 1rpx solid #ccc;
	border-radius: 10rpx;
  }
  .label {
  margin-left: 40rpx;
  margin-top: 55rpx;
  float: left;
  }
  
  
  .button {
    margin-top: 50rpx;
    margin-bottom: 30rpx;
	  width: 200rpx;
	  height: 82rpx;
	  background-color: #007bff;
	  color: #fff;
	  border: none;
	  border-radius: 25rpx;
    cursor: pointer;
    line-height: 82rpx;
    text-shadow: 4rpx 4rpx 6rpx rgba(224, 93, 148, 0.9);
    background: linear-gradient(to left,purple,pink )
}
  
  .button:hover {
  /* background-color: #0056b3; */
  background: linear-gradient(to right,purple,pink )
  }