.container {
	background-color: #e0e9f1; /* 淡蓝色背景 */
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	height: 100vh;
  }
  
  .avatar-container {
	width: 440rpx;
	height: 440rpx;
	margin-bottom: 44rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	border-radius: 50%;
	background-color: #f2f2f2;
  }
  
  .avatar {
	width: 410rpx;
	height: 410rpx;
	border-radius: 50%;
  }
  
  .upload-button {
	width: 240rpx;
	height: 80rpx;
	line-height: 80rpx;
	margin-bottom: 10px;
	border-radius: 20px;
	font-size: 35rpx;
	color: rgb(234, 240, 237);
	display: flex;
	align-items: center;
	justify-content: center;
	cursor: pointer;
	background: linear-gradient(to left,purple,pink )
  
  }
  
  .green-button {
	background-color: #8bc34a;
  }
  