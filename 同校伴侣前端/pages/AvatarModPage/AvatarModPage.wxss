.container {
  background-color: rgb(248, 240, 229);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.avatar-container {
  width: 200px;
  height: 200px;
  margin-bottom: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: #f2f2f2;
}

.avatar {
  width: 180px;
  height: 180px;
  border-radius: 50%;
}

.upload-button {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-bottom: 10px;
  border-radius: 20px;
  font-size: 34rpx;
  color: rgb(234, 240, 237);
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  background: linear-gradient(to left,purple,pink )

}

.green-button {
  background-color: #8bc34a;
}
